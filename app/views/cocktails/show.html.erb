<h2><%= @cocktail.name %></h2>
<% @cocktail.doses.each do |dose| %>
<p><%= dose.ingredient.name %></p>
<p><%= dose.description%></p>
<%= link_to "Delete",
            cocktail_dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<% end  %>





<p><%= link_to 'Back to cocktails', cocktails_path  %></p>
<p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail)  %></p>

